
<div class="slider w-5/6 pt-24 h-full overflow-auto z-10 leading-tight">
  <div class="details-box bg-white border border-grey-dark rounded">
    <div class="h-10">
      <button class="focus:outline-none hover:text-blue w-8 float-right text-3xl"
        onclick={{action @onClose}}>
        &times;
      </button>
    </div>
    <div class="py-3 px-0 bg-blue-lightest border-t border-b border-blue-lighter">
      <h3 class="text-center">Post Data</h3>
    </div>
    <ul class="list-reset my-2">
      {{#each-in postData as |key value|}}
        {{#if (eq key "title")}}
          <li>
            <span class="ml-1 font-bold w-12 pl-1 inline-block">{{key}}</span>
            <span class="ml-4 font-bold w-3/4 pl-12 inline-block italic capitalize">{{value}}</span>
          </li>
        {{else}}
          {{#if (eq key "body")}}
            <li>
              <span class="ml-1 font-bold w-12 pl-1 inline-block">{{key}}</span>
              <span class="ml-4 w-3/4 pl-12 inline-block italic">&ldquo;{{value}}&rdquo;</span>
            </li>
          {{else}}
            <li>
              <span class="ml-1 font-bold w-12 pl-1 inline-block">{{key}}</span>
              <span class="ml-4 w-3/4 pl-12 inline-block italic">{{value}}</span>
            </li>
          {{/if}}
        {{/if}}
      {{/each-in}}
    </ul>

    <div class="py-3 px-0 bg-blue-lightest border-t border-b border-blue-lighter">
      <h3 class="text-center">User Data</h3>
    </div>
    <ul class="list-reset my-2">
      {{#each-in userData as |key1 val1|}}
        {{#if (is-object val1)}}
          <li>
            <span class="ml-1 font-bold w-12 pl-1 inline-block">{{key1}}</span>
          </li>
          {{#each-in val1 as |key2 val2|}}
            {{#if (is-object val2)}}
              <li>
                <span class="ml-5 font-bold w-12 pl-1 inline-block">{{key2}}</span>
              </li>
              {{#each-in val2 as |key3 val3|}}
                <li>
                  <span class="ml-10 font-medium w-2 pl-1 inline-block">{{key3}}</span>
                  <span class="ml-5 w-3/4 pl-12 inline-block italic">{{val3}}</span>
                </li>
              {{/each-in}}
            {{else}}
              <li>
                <span class="ml-5 font-medium w-6 pl-1 inline-block">{{key2}}</span>
                <span class="ml-6 w-3/4 pl-12 inline-block italic">{{val2}}</span>
              </li>
            {{/if}}
          {{/each-in}}
        {{else}}
          <li>
            <span class="ml-1 font-bold w-12 pl-1 inline-block">{{key1}}</span>
            <span class="ml-4 w-3/4 pl-12 inline-block italic">{{val1}}</span>
          </li>
        {{/if}}
      {{/each-in}}
    </ul>
  </div>
</div>
